pipeline {
    agent any
      stages {
        stage('Build And Push to Artifactory') {
            steps {
                script {
                    sh '''
#!/bin/bash

# Define the path to your file
filePath="./pom.xml"

# Read words from the file and store them in an array
words=($(< "$filePath"))

# Loop through the array and store each word in a separate variable
for ((i=0; i<${#words[@]}; i++)); do
    # Variable names (e.g., word1, word2, etc.)
    variableName="word$((i+1))"

    # Store the word in the variable
    eval "$variableName=${words[i]}"

    # Print the variable (optional)
    echo "$variableName: ${!variableName}"
done
'''
                }
            }
        }       
    }
}
