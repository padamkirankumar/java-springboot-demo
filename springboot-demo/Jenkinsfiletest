pipeline {
    agent any
    tools {
        maven 'mvn39'        
    }
    environment {
        NAMESPACE = 'default'
        BASE_VERSION_FILE = 'baseversion.txt'
        BUILD_VERSION_FILE = 'buildversion.txt'
        BUILD_NUMBER_FILE = "${WORKSPACE}/buildNumber.txt"
        BUILD_FOLDER = "${params.Module}"
        DOCKERFILE_FOLDER = "${params.DOCKERHUBNAME}"
    }

    stages {         
                      
            stage('Maven Build') {
            steps {
                script {                    
                        sh '''
                            cd ${BUILD_FOLDER}
                            mvn clean package
                            ls -la
                        '''
                    }
                }
            }  

 stage('Docker Build') {
            steps {
                script {
                      sh '''
                       cd ${BUILD_FOLDER}
                        docker build -t ${DOCKERFILE_FOLDER}/mytomcat:v5 .		           
		        cat ./mypassword.txt | docker login --username ${DOCKERFILE_FOLDER} --password-stdin			   
			docker push ${DOCKERFILE_FOLDER}/mytomcat:v5			   
			docker rmi ${DOCKERFILE_FOLDER}/mytomcat:v5                         
                        docker logout
                        '''
                    }
                    
                }
            }
  }
    }
